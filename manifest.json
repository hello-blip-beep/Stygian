{
    "name": "Stygian",
    "description": "Switch from light mode to dark mode and vice versa with ease.",
    "version": "1.0",
    "manifest_version": 2 ,
    "background":{
        "scripts":[
            "popup.js"
        ],
        "persistent":true
    },
    "browser_action":{
        "default_popup": "popup.html",
        "default_icon": "128.png",
        "icons": { "16": "16.png",
            "32": "32.png",
            "64": "64.png",
           "128": "128.png" }
    },
    "permissions":[
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}